<Window x:Class="converter.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:converter"
    mc:Ignorable="d"
    Title="MainWindow" Height="450" Width="800">

    <Grid Margin="10">
    
        <StackPanel VerticalAlignment="Center">
    
            <!-- VU ID Label -->
            <TextBlock 
                Text="BC210423907"
                FontSize="25"
                FontWeight="Bold"
                TextAlignment="Center"
                HorizontalAlignment="Center"
                Margin="0,0,0,20"
            />

                <!-- Input Label -->
                <TextBlock 
                    Text="Input Fahrenheit:"
                    FontSize="15"
                    FontWeight="Bold"
                    Margin="0,0,0,5"
                />

                <!-- Input Textbox -->
                <TextBox 
                    Name="FahrenheitTextBox"
                    FontSize="16"
                    Height="30"
                    Margin="0,0,0,20"
                />

                <!-- Convert Button -->
                <Button 
                    Content="To Celsius"
                    Click="ConvertButton_Click"
                    Background="Green"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="15"
                    Height="40"
                    Margin="0,0,0,20" 
                />

                <!-- Result Label -->
                <TextBlock 
                    Name="Result Label"
                    FontSize="15"
                    FontWeight="Bold"
                    Text="Result: "
                    Margin="0,10,0,0"
                />
        </StackPanel>

    </Grid>

</Window>
